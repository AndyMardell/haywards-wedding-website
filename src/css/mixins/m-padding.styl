responsive-padding(min, max, fallback = null)
  if fallback
    padding fallback
  padding "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)

responsive-padding-top(min, max, fallback = null)
  if fallback
    padding-top fallback
  padding-top "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)

responsive-padding-bottom(min, max, fallback = null)
