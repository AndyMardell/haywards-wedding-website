responsive-margin-top(min, max, fallback = null)
  if fallback
    margin-top fallback
  margin-top "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)

responsive-margin-bottom(min, max, fallback = null)
  if fallback
    margin-bottom fallback
    margin-bottom "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)

responsive-margin-vertical(min, max, fallback = null)
  if fallback
    margin-top fallback
    margin-bottom fallback
  margin-top "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)
  margin-bottom "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)

responsive-margin-horizontal(min, max, fallback = null)
  if fallback
    margin-left fallback
    margin-right fallback
  margin-left "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)
  margin-right "calc(%spx + (%s - %s) * ((100vw - 300px) / (1600 - 300)))" % (min max min)
