.header-splash
  position fixed
  background-color #ccc
  background-image url('../images/rose-background-small.png')
  background-size cover
  background-position center center
  margin 2vw
  width 96vw
  height calc(100vh - 4vw)
  display flex
  justify-content center
  align-items center

  &__background
    bottom 0
    left 0
    right 0
    top 0
    z-index -1

  h1
  h2
    color white
    text-shadow 0 0 10px rgba(0, 0, 0, 0.25)

  h1
    responsive-font(40, 100, 5em)

  h2
    font-family font-body
    font-weight 300
    text-transform uppercase
    responsive-padding-top(0, 10, 10px)
    responsive-font(13, 25, 2em)
    responsive-letter-spacing(3, 7, 0.2em)
